# RedFlix Backend Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3333
NODE_ENV=development

# Supabase PostgreSQL - Connection Pooling (for queries)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true&sslmode=require"

# Supabase PostgreSQL - Direct Connection (for migrations)
DIRECT_URL="postgresql://user:password@host:5432/postgres?sslmode=require"

# Supabase API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Secret (change in production!)
JWT_SECRET=redflix-secret-key-change-in-production

# TMDB API Keys (for data ingestion - get from https://www.themoviedb.org/settings/api)
# Multiple keys for rotation to avoid rate limits
TMDB_API_KEY_1=your_tmdb_api_key_1
TMDB_API_KEY_2=your_tmdb_api_key_2
TMDB_API_KEY_3=your_tmdb_api_key_3

# TVDB API Key (backup for images - get from https://www.thetvdb.com)
TVDB_API_KEY=your_tvdb_api_key
